<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentTitleLoading"
    style="@style/TitleBarStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonFragmentTitle"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_back"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ToggleButton
            android:id="@+id/toggleShowOffline"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="@string/show_offline"
            android:textOn="@string/show_online"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentAdd"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_search"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentUpdate"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_refresh"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/buttonFragmentStar"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:drawableRight="@drawable/ic_action_star"
            android:textOff=""
            android:textOn=""
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/buttonFragmentAppend"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:drawableRight="@drawable/ic_action_append"
            android:textOff=""
            android:textOn=""
            android:visibility="gone" />
    </LinearLayout>

</HorizontalScrollView>