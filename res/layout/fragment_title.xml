<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TitleBarStyle" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonFragmentTitle"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ToggleButton
            android:id="@+id/toggleShowOffline"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textOff="Show Online"
            android:textOn="Show Offline"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentAdd"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_search"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentUpdate"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_refresh"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/buttonFragmentStar"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="3dp"
            android:drawableRight="@drawable/ic_action_star"
            android:textOff=""
            android:textOn=""
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentAddContact"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_user_add"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/buttonFragmentRemoveContact"
            style="@style/ActionBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:src="@drawable/ic_action_delete"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>