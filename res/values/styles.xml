<resources>

    <style name="PS2BaseTheme" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="PS2BaseThemeDialog" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="ActivityStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ActionBarButtonStyle">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/ps2_button</item>
        <item name="android:textColor">@color/WHITE</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:background">@drawable/frame_title</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@drawable/frame_bottom</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="FragmentCenterStyle">
        <item name="android:background">@drawable/frame_center</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/frame_module</item>
    </style>

    <style name="EmbeddedFragmentStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/ps2_button_bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="GreenButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/ps2_button_bold_green</item>
    </style>

    <color name="BLACK">#000000</color>
    <color name="WHITE">#ffffff</color>

</resources>