<resources>

    <style name="PS2BaseTheme" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="ActivityStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ActionBarButtonStyle">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="TitleBarStyle">
        <item name="android:background">@drawable/fragment_title</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FragmentStyle">
        <item name="android:background">@drawable/fragment</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ListItemStyle">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@drawable/fragment_frame</item>
    </style>

    <style name="EmbeddedFragmentStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/menu_item</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="GreenButtonStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/menu_item_green</item>
    </style>

    <color name="BLACK">#000000</color>

</resources>