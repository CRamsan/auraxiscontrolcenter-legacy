<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesarandres.ps2link"
    android:versionCode="44"
    android:versionName="2.8.2" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission android:name="com.cesarandres.ps2link.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.cesarandres.ps2link.permission.C2D_MESSAGE" />
    
    <application
        android:name="com.cesarandres.ps2link.ApplicationPS2Link"
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/PS2Theme" >
        <activity
            android:name="com.cesarandres.ps2link.ActivityContainer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cesarandres.ps2link.fragments.holders.FragmentProfilePager" >
        </activity>
        <activity android:name="com.cesarandres.ps2link.fragments.holders.FragmentOutfitPager" >
        </activity>
        
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" tools:ignore="MissingRegistered">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.cesarandres.ps2link" />
            </intent-filter>
        </receiver>
        <service android:name=".GcmIntentService" tools:ignore="MissingRegistered"/>
        
    </application>
</manifest>